<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Task Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Task Title" name="Name" value="<%= Task.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Task Author</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Task Author" name="Author" value="<%= Task.Author %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Published</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Published year" name="Published" value="<%= Task.Published %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Task Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Task Description" name="Description" required><%= Task.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Task's Price" name="Price" value="<%= Task.Price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>