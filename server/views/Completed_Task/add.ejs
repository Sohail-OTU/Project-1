<%-include ../Parials/header.ejs%>
<%-include ../Parials/main.ejs%>

<!--Content for add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%=title%></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Task Title</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Task Title" name="Title" required>
                    </div>
                    <div class="form-group">
                        <label for="descriptionTextField">Task Description</label>
                        <textarea type="text" class="form-control" id="descriptionTextField" placeholder="Describe your Task" name="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="dateTextField">Date of Task</label>
                            <input type="date" class="form-control" id="dateTextField" placeholder="yyyy-mm-dd" name="Date" required>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                    <label for="dueDateTextArea">Task Deadline</label>
                    <input type="date" class="form-control" id="dueDateTextArea"  placeholder="yyyy-mm-dd" name="DueDate" required>
                </div>
                <div class="form-group">
                    <label for="dueDateTextArea">Task Deadline</label>
                    <input type="date" class="form-control" id="dueDateTextArea"  placeholder="yyyy-mm-dd" name="DueDate" required>
                </div>
                <div class="form-group">
                    <label for="statusTextArea">Status of Task</label>
                    <input type="text" class="form-control" id="statusTextArea"  placeholder="Active/Completed" name="Status" required>
                </div>
                <button class="btn btn-primary" type="submit">Cancel<i class="fas fa-undo"></i></button>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>



                
                            




                        




