<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Oporation-->
<div class="body_margins container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h3><% title %></h3>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextFied">Task Title</label>
                    <input type="text" class="form-control" id="titleTextFied" placeholder="Enter the Task Name" name="Title" value="<%= Task.Title %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextFied">Task Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextField" placeholder="Describe your Task" name="Description"><%- Task.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Date of Task</label>
                    <input type="date" class="form-control" id="dateTextField" placeholder="" name="Date" value="<%= formattedDate %>" required>
                </div>
                <div class="form-group">
                    <label for="dueDateTextField">Task Deadline</label>
                    <input type="date" class="form-control" id="dueDateTextField" placeholder="" name="DueDate" value="<%= formattedDueDate %>" required>
                </div>
                <div class="form-group">
                    <label for="statusTextField"> Status of Task</label>
                    <input type="text" class="form-control" id="statusTextField" placeholder="Active/Completed" name="Status" value="<%= Task.Status %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit<i class="fas fa-edit"></i></button>
                <a href="/tasks/active" class="btn btn-warning">Cancel<i class="fas fa-undo"></i></a>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
