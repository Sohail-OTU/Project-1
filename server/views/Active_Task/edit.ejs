<%- include ..Partials/header.ejs%>
<%- include ..Partials/main_nav.ejs%>
<!--Content for the edit Oporation-->
<div class="container"></div>
<div class="row">
    <div class="offset-md-3 col-md-6">
        <h1><% title %></h1>
        <form class="form" method="POST">
            <div class="form-group">
                <label for="titleTextFied">Task Title</label>
                <input type="text" class="form-control" id="titleTextFied" placeholder="Enter the Task Name" name="Title" value="<%= Task.Title %>" required>
            </div>
            <div class="form-group">
                <label for="descriptionTextFied">Task Description</label>
                <textarea type="text" class="from-control" id="descriptionTextField" placeholder="Describe your Task" name="Description"><%=Task.Description %></textarea>
            </div>
            <div class="form-group">
                <label for="dateTextField">Date of Task</label>
                <input type="date" class="form-control" id="dateTextField" placeholder="" name="Date" value="<%= formattedDate %>" required>
            </div>
        </form>
    </div>
</div>