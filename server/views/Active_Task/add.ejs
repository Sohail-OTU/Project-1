<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="body_margins container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h3><%= title %></h3>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField"> Task Title</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Task Title" name="Title" required>  
                </div>
                <div class="form-group">
                    <label for="descriptionTextField">Task Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextField" placeholder="Descibe Your Task" name="Description"></textarea>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Date of Task</label>
                    <input type="date" class="form-control" id="dateTextField" placeholder="yyyy-mm-dd" name="Date" required>
                </div>
                <div class="form-group">
                    <label for="dueDateTextArea">Task Deadline</label>
                    <input type="date" class="form-control" id="dueDateTextField" placeholder="yyyy-mm-dd" name="DueDate" required>
                </div>
                <div class="form-group">
                    <label for="statusTextField">Status of Task</label>
                    <input type="text" class="form-control" id="statusTextField" placeholder="Active/Completed" name="Status" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit<i class="fas fa-edit"></i></button>
                <a href="/tasks/active" class="btn btn-warning">Cancel<i class="fas fa-undo"></i></a>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>