<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Task Database-->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/tasks/active/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Task
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="col-2">Task Name</th>
                    <th class="col-4">Description</th>
                    <th class="col-2">Task Date</th>
                    <th class="col-2">Task Deadline</th>
                    <th class="col-1">Status</th>
                </tr>
                <% for(let count=0;count<TaskList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= TaskList[count].Title %></td>
                    <td class="text-center col-4"><%= TaskList[count].Description %></td>
                    <td class="text-center col-2"><%=TaskList[count].Date %></td>
                    <td class="text-center col-2"><%= TaskList[count].DueDate %> </td>
                    <td class="text-center col-1"><%= TaskList[count].Status %></td>
                    <td class="text-center col-1">
                        <a href="/tasks/active/edit/<%= TaskList[count]._id%>"
                            class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                    </td>
                    <td class="text-center col-1">
                    <a href="/tasks/active/delete/<%= TaskList[count]._id%>"
                        class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete
                    </a>
                    </td>
                </tr>    
                    <%} %>
            </table>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs%>